<div class="container" style="text-align:center;">
<form action="/ngo" method="POST">
  <input type="text" name="search" style="width:30%;padding:6px;" placeholder="Enter restaurant">
  <button class="btn btn-md btn-secondary" type="submit">search</button>
</form>
</div><br><br>
<div class="container">
  <table class="table bg-dark" style="background-color:rgba(0,0,0,2);padding:10px;border-radius:10px;color:white;" >
  <th>Name</th><th>Location</th><th>Phone number</th><th>Available</th><th>Required</th><th>Order</th>
  <%doc.forEach(function(found){%>
  <tr>
  <td><%=found.name%></td>
  <td><%=found.address%></td>
  <td><%=found.phno%></td>
  <td><%=found.totalFood()%></td>
  <form action="/ngo/<%=found.fssai%>" method="POST">
  <td><input type="number" name="order" id="order" min=1 max="<%=found.totalFood()%>"></td>
  <input type="hidden" id="recipient" value="<%=found.email%>">
  <td><button type="submit" class="btn btn-md btn-primary" onClick="confirmOrder()" name="button">Order</button></td>
  </form>
  </tr>
  <%})%>
  </table>
</div>
</div>

